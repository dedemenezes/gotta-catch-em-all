<h1 class="text-center text-magic">Trainers</h1>
<div class="container">
  <div class="row">
    <% @trainer.each do |trainer| %>
      <div class="col-12 col-md-6 col-lg-4">
        <%= link_to trainer_path(trainer) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= trainer.banner_url %>)">
            <%= trainer.name %>
          </div>
        <% end %>

      </div>
    <% end %>
  </div>
</div>
