<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @trainer.banner_url %>);">
  <div class="container">
    <h1><%= @trainer.name %></h1>
  </div>
</div>



<div class="container mt-3">
  <div class="row">
    <div class="col-8">
      <div class="row">
        <% @trainer.pokemons.each do |pokemon| %>
          <div class="col-4">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= pokemon.image_url %>)">
              <%= pokemon.name %>
              <%= link_to pokemon_path(pokemon), data: { turbo_method: :delete, turbo_confirm: "Are you sure? It's so cute"}, class: 'card-remove-link' do %>
                <%= icon('fa-solid', 'trash', class: 'fs-6') %>
              <% end %>
              <div class="poke-types">
                <% pokemon.types.each do |type| %>
                  <small class="type-pill"><%= type.name %></small>
                <% end %>
              </div>
              <%= link_to 'Add type', new_pokemon_pokemon_type_path(pokemon) %>
            </div>
          </div>
        <% end %>
      </div>

    </div>
    <div class="col-4">
      <%= simple_form_for([@trainer, @pokemon]) do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.submit class: 'btn btn-magic' %>
      <% end %>
    </div>
  </div>
</div>
